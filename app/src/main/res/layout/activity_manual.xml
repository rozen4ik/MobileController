<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ManualActivity">

  <Button
      android:id="@+id/infoManualCard"
      android:layout_width="48dp"
      android:layout_height="match_parent"
      android:text="И\nН\nФ\nО\n"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="h,0:0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <Button
      android:id="@+id/passageManualCard"
      android:layout_width="48dp"
      android:layout_height="match_parent"
      android:text="П\nР\nО\nХ\nО\nД"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <FrameLayout
      android:id="@+id/place_manual_fragments"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginStart="48dp"
      android:layout_marginEnd="48dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editNumberCard">

  </FrameLayout>

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="Введите номер карты"
      android:textAppearance="@style/TextAppearance.AppCompat.Body2"
      app:layout_constraintEnd_toStartOf="@+id/passageManualCard"
      app:layout_constraintStart_toEndOf="@+id/infoManualCard"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/editNumberCard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="textPersonName"
      android:hint="B00000000193083881"
      android:layout_margin="15dp"
      app:layout_constraintEnd_toStartOf="@+id/passageManualCard"
      app:layout_constraintStart_toEndOf="@+id/infoManualCard"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>